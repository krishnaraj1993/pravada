<div class="news col-lg-9">
	<div class="newsletterblock">
		<div class="newsletter-form block-content">				
			<div class="news-info row">
				{# <div class="news-description">{{ newsletter_description }}</div> #}
				<div class="title-text col-sm-4">
					<h3><i class="icon-mail"></i>{{ newsletter_title }}</h3>
				</div>	
				<!-- newsletter box -->
				<form name="frmnewsletter" id="frmnewsletter" onsubmit="subscribe();return false" method="post" class="col-sm-8">
					<div class="subscribe-form">
						<input type="email" name="newsletter_usr_email" id="newsletter_usr_email" placeholder="{{ entry_user_email }}" class="form-control input-lg inputNew txtemail" required>
						<button type="submit" class="subscribe-btn">{{ entry_subscribe }}</button>
					</div>
					<!-- newsletter notofication -->
					<div class="newsletter-message"></div>
					<!-- newsletter notofication -->
				</form>
				<!-- newsletter box -->		
			</div>				
		</div>
	</div>
</div>
<script><!--
//add 
function subscribe(){
	$.ajax({
		type: 'post',
		url: 'index.php?route=extension/module/mahardhi_newsletter/subscribe',
		dataType: 'html',
		data:$("#frmnewsletter").serialize(),
		success: function (html) {
			try {
				eval(html);
			}
			catch (e) {
			}				
		}
	});
}

// check for validation
$(document).ready(function() {
	$('#newsletter_usr_email').keypress(function(e) {
		if(e.which == 13) {
			e.preventDefault();
			subscribe();
		}	
	});
});	
//--></script>